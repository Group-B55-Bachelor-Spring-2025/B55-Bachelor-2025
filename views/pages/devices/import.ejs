<div id="importDevicesModal" class="hidden">
  <div class="fixed inset-0 bg-gray-600 bg-opacity-50 z-50"></div>
  <div class="fixed inset-0 flex items-center justify-center z-60">
    <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md">
      <h2 class="text-xl font-semibold mb-4">Import Devices</h2>
      <form id="importDevicesForm" action="/devices/import" method="POST">
        <input type="hidden" name="deviceGroupId" value="<%= deviceGroup.id %>">
        <div class="mb-4">
          <label for="provider" class="block text-sm font-medium text-gray-700">Select Provider</label>
          <select id="provider" name="provider" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50">
            <% providers.forEach(provider => { %>
              <option value="<%= provider.id %>"><%= provider.name %></option>
            <% }) %>
          </select>
        </div>
        <button type="submit" class="w-full bg-teal-700 text-white py-2 rounded">Continue</button>
      </form>
      <button class="mt-4 w-full text-center text-gray-500 hover:text-gray-700" onclick="hideModal('importDevicesModal')">Cancel</button>
    </div>
  </div>
</div>
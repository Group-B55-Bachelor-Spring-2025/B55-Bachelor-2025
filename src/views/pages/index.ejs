
<div class="flex justify-between items-center my-8">
  <h1 class="text-3xl">Adderesses</h1>
  <button id="showAddressModal" class="bg-teal-700 rounded p-2 text-white cursor-pointer">Add Address</button>
</div>
<% if (addresses?.length > 0) { %>
  <div class="grid grid-cols-4 gap-4">
    <% addresses.forEach(address => { %>
      <div class="flex flex-col gap-4 border border-gray-400 p-4 rounded shadow">
        <div class="flex justify-between items-center">
          <h2 class="text-xl font-semibold"><%= address.name %></h2>
          <button class="cursor-pointer text-3xl">...</button>
        </div>
        <!-- TODO: replace temp with number of devices on this location -->
        <p class="text-center">temp element</p>
        <a href="/devices/<%= address.id %>" class="p-2 bg-teal-700 rounded text-center text-white">See all devices</a>
      </div>
    <% }); %>
  </div>
<% } else { %>
  <div class="empty-state">
    <p>You don't have any addresses yet.</p>
    <button id="showAddressModalEmpty" class="btn">Add your first address</button>
  </div>
<% } %>

<%- include('./addresses/create') %>
